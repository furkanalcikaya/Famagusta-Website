            }

        #content > .content-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 20px 0;
            padding: 80px;
            opacity: 1; 
            visibility: visible;
            transition: opacity 0.5s ease, transform 0.5s ease;
            }    
        #content > div {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 20px 0;
            padding: 10px;
            opacity: 0; 
            transform: translateY(50px); 
            visibility: hidden;
            transition: opacity 0.5s ease, transform 0.5s ease;
            }
    
